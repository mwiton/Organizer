<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="19dp"
        android:id="@+id/title_textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/date_textView"
        android:layout_below="@+id/title_textView"
        android:layout_alignStart="@+id/title_textView" />

    <TextView
        android:text="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/title_textView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:id="@+id/start_time_textView" />

    <TextView
        android:text="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/end_time_textView"
        android:layout_alignBaseline="@+id/date_textView"
        android:layout_alignBottom="@+id/date_textView"
        android:layout_alignStart="@+id/start_time_textView" />
</RelativeLayout>